<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
    <div id="error_explanation">
    <h2>
        <%= pluralize(@user.errors.count, "error") %>
        prohibited this article from being saved:
    </h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
<% end %>
<h1>Create Your Account</h1>

<h2>Personal Information:</h2>
First Name: <%= f.text_field :first_name %><br><br>
Last Name: <%= f.text_field :last_name %><br><br>
Email Address: <%= f.text_field :email %><br>

<h2>Create Your Login:</h2>
Username: <%= f.text_field :username %><br><br>
Password: <%= f.password_field :password %><br><br>
Confirm Password: <%= f.password_field :password_confirmation %><br><br>

<%= f.submit %>
<% end %>